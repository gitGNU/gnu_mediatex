# enable cgi
Options +ExecCGI +FollowSymLinks
AddHandler cgi-script .cgi

# should not be needed
DefaultType text/html

<Files get.cgi>
       # set log severity
       SetEnv MDTX_LOG_FACILITY local2
       SetEnv MDTX_LOG_SEVERITY info

       # login/password
       Require group index
</Files>

<Files search.cgi>
       # login/password
       Require group index
</Files>

<Files viewvc.cgi>
       # login/password
       Require group history
</Files>
